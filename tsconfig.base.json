{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mf-micro-front/ui": ["libs/shared/ui/src/index.ts"],
      "@mf-micro-front/user-data": ["libs/shared/user-data/src/index.ts"],
      "dashboard/Routes": [
        "apps/dashboard/src/app/remote-entry/entry.routes.ts"
      ],
      "footer/Routes": ["apps/footer/src/app/remote-entry/entry.routes.ts"],
      "header/Routes": ["apps/header/src/app/remote-entry/entry.routes.ts"],
      "home/Routes": ["apps/home/src/app/remote-entry/entry.routes.ts"],
      "login/Routes": ["apps/login/src/app/remote-entry/entry.routes.ts"],
      "roles/Routes": ["apps/roles/src/app/remote-entry/entry.routes.ts"],
      "users/Routes": ["apps/users/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
